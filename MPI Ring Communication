#include <mpi.h>
#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[])
{
    int rank, size;
    int send_to, recv_from;
    int tag = 0;
    char send_msg[100];
    char recv_msg[100];

    MPI_Init(&argc, &argv);

    MPI_Comm_rank(MPI_COMM_WORLD, &rank);
    MPI_Comm_size(MPI_COMM_WORLD, &size);

    send_to   = (rank + 1) % size;          
    recv_from = (rank - 1 + size) % size;  

    sprintf(send_msg, "Hello from process %d", rank);
r
    MPI_Sendrecv(
        send_msg, strlen(send_msg) + 1, MPI_CHAR, send_to, tag,
        recv_msg, 100,               MPI_CHAR, recv_from, tag,
        MPI_COMM_WORLD, MPI_STATUS_IGNORE
    );

    printf("Process %d received: '%s' from process %d\n", rank, recv_msg, recv_from);

    MPI_Finalize();
    return 0;
}
